# managed by chef, changes will be overwritten
check process <%= @service_name.inspect %>
  <% if @pattern %>
    matching <%= @pattern.inspect %>
  <% end %>
  <% if @pid_file %>
    with pidfile <%= @pid_file.inspect %>
  <% end %>
  every 1 cycles
  start program "/usr/local/bin/start_stop_service_from_monit.sh start <%= @service_name %>"
  stop program "/usr/local/bin/start_stop_service_from_monit.sh stop <%= @service_name %>"
